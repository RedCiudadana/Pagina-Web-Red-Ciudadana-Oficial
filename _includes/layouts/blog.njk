                <h2 class="font-bold text-xl border-b-2 border-yellow-500 mb-4 pb-4">Más Blogs</h2>
            </div>

            <div class="row">
            {% for post in collections.blogs | reverse | limit(4)%}
            {% if page.url !== post.url %}

              <!-- Blog -->
              <div class="col-xl-4 col-lg-4 col-md-6">
                  <div class="case-wrapper case-02-wrapper mb-30">
                      <div class="case-img">
                          <a target="_blank" href="{{post.url}}"><img src="{{post.data.image}}" alt="{{post.data.title}}"></a>
                      </div>
                      <div class="case-text">
                          <h3><a target="_blank" href="{{post.data.enlace}}"> {{post.data.title}} </a></h3>
                          <span>{{post.data.date | dateFormat('DD / MM / YYYY')}}</span>
                      </div>
                      <div class="case-info custom-overflow-hidden" style="height:120px">
                          <p class="text-overflow2"> {{post.data.description}} </p>
                      </div>
                      <div class="b-button">
                          <a target="_blank" href="{{post.url}}"><span>Mas Información</span> <i class="fa-solid fa-arrow-right"></i></a>
